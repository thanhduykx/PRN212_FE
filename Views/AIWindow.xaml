<Window x:Class="AssignmentPRN212.Views.AIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phân tích AI" Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F4F4F9">

    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="15">
            <StackPanel Orientation="Vertical">

                <!-- Loading -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <ProgressBar x:Name="LoadingProgressBar" Width="150" Height="20" 
                                 IsIndeterminate="True" Visibility="Collapsed"/>
                    <TextBlock x:Name="LoadingTextBlock" Text="Đang phân tích..." 
                               Foreground="#007ACC" FontWeight="Bold" 
                               Margin="10,0,0,0" VerticalAlignment="Center" 
                               Visibility="Collapsed"/>
                </StackPanel>

                <!-- Kết quả AI -->
                <TextBox x:Name="ResultTextBox" TextWrapping="Wrap" Height="300" 
                         VerticalScrollBarVisibility="Auto" IsReadOnly="True"
                         Background="#F0F0F0" BorderBrush="#CCC" BorderThickness="1"
                         Padding="10" FontFamily="Segoe UI" FontSize="14"/>

                <!-- Chat input -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBox x:Name="ChatInputTextBox" Width="400" Height="30" 
                             FontFamily="Segoe UI" FontSize="14" 
                             Text="Nhập câu hỏi của bạn..."/>
                    <Button Content="Gửi" Width="80" Height="30" Margin="10,0,0,0"
                            Background="#007ACC" Foreground="White" FontWeight="Bold"
                            BorderThickness="0" Click="SendChatButton_Click"
                            Cursor="Hand"/>
                </StackPanel>

                <!-- Phân tích lại -->
                <Button Content="Phân tích dữ liệu" Width="150" Height="35" Margin="0,10,0,0"
                        Background="#007ACC" Foreground="White" FontWeight="Bold"
                        BorderThickness="0" Click="AnalyzeButton_Click"
                        HorizontalAlignment="Left" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
