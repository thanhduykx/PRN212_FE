<Window x:Class="AssignmentPRN212.Views.RentalLocationListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh sÃ¡ch Äá»‹a Ä‘iá»ƒm thuÃª xe" Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <Border Grid.Row="0" Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ”" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="SearchTextBox" Width="300" Height="30" 
                         Padding="5" VerticalContentAlignment="Center"
                         TextChanged="SearchTextBox_TextChanged"
                         Tag="TÃ¬m kiáº¿m theo TÃªn, Äá»‹a chá»‰, Tá»a Ä‘á»™..."/>
                <TextBlock Text="Tá»•ng sá»‘: " FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,5,0"/>
                <TextBlock x:Name="TotalCountTextBlock" Text="0" FontWeight="Bold" VerticalAlignment="Center" Foreground="#2196F3"/>
            </StackPanel>
        </Border>

        <!-- DataGrid -->
        <DataGrid x:Name="RentalLocationDataGrid" AutoGenerateColumns="False" SelectionMode="Single"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  Grid.Row="1" Margin="0,0,0,10" 
                  HeadersVisibility="Column"
                  RowBackground="#FFFFFF" AlternatingRowBackground="#F7F7F7"
                  GridLinesVisibility="None"
                  SelectionChanged="RentalLocationDataGrid_SelectionChanged"
                  FontSize="14" FontWeight="Normal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="TÃªn" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Äá»‹a chá»‰" Binding="{Binding Address}" Width="2*"/>
                <DataGridTextColumn Header="Tá»a Ä‘á»™" Binding="{Binding Coordinates}" Width="*"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Panel thÃ´ng tin chi tiáº¿t -->
        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="15" 
                Margin="0,0,0,0">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="ThÃ´ng tin chi tiáº¿t" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="TÃªn:" Width="80" VerticalAlignment="Center"/>
                    <TextBox x:Name="NameTextBox" Width="250" Margin="0,0,20,0"/>
                    <Label Content="Äá»‹a chá»‰:" Width="80" VerticalAlignment="Center"/>
                    <TextBox x:Name="AddressTextBox" Width="250"/>
