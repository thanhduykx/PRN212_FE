<Window x:Class="AssignmentPRN212.Views.RentalLocationListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh sách Rental Location" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="RentalLocationDataGrid" AutoGenerateColumns="False" Grid.Row="0" 
                  SelectionChanged="RentalLocationDataGrid_SelectionChanged" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*"/>
                <DataGridTextColumn Header="Coordinates" Binding="{Binding Coordinates}" Width="*"/>
                <DataGridTextColumn Header="Active" Binding="{Binding IsActive}" Width="80"/>
                <DataGridTextColumn Header="Deleted" Binding="{Binding IsDeleted}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Name:" Width="80"/>
                    <TextBox x:Name="NameTextBox" Width="150"/>
                    <Label Content="Address:" Width="80" Margin="20,0,0,0"/>
                    <TextBox x:Name="AddressTextBox" Width="300"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Coordinates:" Width="80"/>
                    <TextBox x:Name="CoordinatesTextBox" Width="300"/>
                    <Label Content="Active:" Width="80" Margin="20,0,0,0"/>
                    <CheckBox x:Name="IsActiveCheckBox"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Add" Width="80" Click="AddButton_Click"/>
                    <Button Content="Update" Width="80" Margin="10,0,0,0" Click="UpdateButton_Click"/>
                    <Button Content="Delete" Width="80" Margin="10,0,0,0" Click="DeleteButton_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>