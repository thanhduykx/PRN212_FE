<Window x:Class="AssignmentPRN212.Views.CreateFeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đánh giá xe" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Viết đánh giá của bạn" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="Tiêu đề:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleTextBox" Height="40" Padding="10" FontSize="14" Margin="0,0,0,15"/>

            <Label Content="Nội dung đánh giá:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="ContentTextBox" Height="150" Padding="10" FontSize="14" 
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Hủy" Width="120" Height="40" Margin="0,0,10,0"
                    Background="#9E9E9E" Foreground="White" FontWeight="SemiBold"
                    BorderThickness="0" Cursor="Hand" Click="CancelButton_Click"/>
            <Button Content="Gửi đánh giá" Width="150" Height="40"
                    Background="#4CAF50" Foreground="White" FontSize="16" FontWeight="Bold"
                    BorderThickness="0" Cursor="Hand" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

