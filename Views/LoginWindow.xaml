<Window x:Class="AssignmentPRN212.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="450" WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2D" ResizeMode="NoResize" WindowStyle="None">

    <Border CornerRadius="15" Background="#FF2D2D44" Padding="20" Margin="10  ">
        <Grid>
            <StackPanel VerticalAlignment="Center">
                <!-- Tiêu đề -->
                <TextBlock Text="Electric Car Rent" FontSize="26" FontWeight="Bold" 
                           Foreground="#FF00D0FF" Margin="0,0,0,25" TextAlignment="Center"/>

                <!-- Email -->
                <TextBlock Text="Email" Foreground="White" FontWeight="SemiBold"/>
                <TextBox x:Name="EmailTextBox" Height="30" Margin="0,5,0,15" 
                         Padding="5" Background="#FF3A3A5C" Foreground="White"
                         BorderThickness="0"  />

                <!-- Password -->
                <TextBlock Text="Password" Foreground="White" FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,5,0,20" 
                             Padding="5" Background="#FF3A3A5C" Foreground="White"
                             BorderThickness="0"/>

                <!-- Button -->
                <Button Content="Đăng nhập" Height="40" Background="#FF00D0FF" Foreground="White" 
                        FontWeight="Bold" BorderThickness="0" 
                        Cursor="Hand" Click="Login_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF00D0FF"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF00A0CC"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF0088AA"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
