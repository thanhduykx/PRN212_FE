<Window x:Class="AssignmentPRN212.Views.UserListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh sách User" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="160"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <Border Grid.Row="0" Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🔍" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="SearchTextBox" Width="300" Height="30" 
                         Padding="5" VerticalContentAlignment="Center"
                         TextChanged="SearchTextBox_TextChanged"
                         Tag="Tìm kiếm theo Email, Tên, Role..."/>
                <TextBlock Text="Tổng số: " FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,5,0"/>
                <TextBlock x:Name="TotalCountTextBlock" Text="0" FontWeight="Bold" VerticalAlignment="Center" Foreground="#2196F3"/>
            </StackPanel>
        </Border>

        <!-- DataGrid với style đẹp -->
        <DataGrid x:Name="UsersDataGrid" AutoGenerateColumns="False" SelectionMode="Single"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  Grid.Row="1" Margin="0,0,0,10" 
                  HeadersVisibility="Column"
                  RowBackground="#FFFFFF" AlternatingRowBackground="#F7F7F7"
                  GridLinesVisibility="None"
                  SelectionChanged="UsersDataGrid_SelectionChanged"
                  LoadingRow="UsersDataGrid_LoadingRow"
                  FontSize="14" FontWeight="Normal">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="STT" Width="50" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Panel thông tin chi tiết -->
        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="15" 
                Margin="0,0,0,0" >
            <StackPanel Orientation="Vertical" >
                <TextBlock Text="Thông tin chi tiết" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Email:" Width="80" VerticalAlignment="Center"/>
                    <TextBox x:Name="EmailTextBox" Width="220" Margin="0,0,20,0"/>
                    <Label Content="Full Name:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="FullNameTextBox" Width="220"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center">
                    <Label Content="Role:" Width="80" VerticalAlignment="Center"/>
                    <TextBox x:Name="RoleTextBox" Width="120" Margin="0,0,20,0"/>
                    <Label Content="Active:" Width="80" VerticalAlignment="Center"/>
                    <CheckBox x:Name="IsActiveCheckBox" VerticalAlignment="Center"/>
                    <Button Content="✏️ Cập nhật" Width="120" Height="35" Margin="20,0,5,0" Background="#2196F3" Foreground="White" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand" Click="UpdateButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="🗑️ Xóa" Width="120" Height="35" Margin="5,0,5,0" Background="#F44336" Foreground="White" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand" Click="DeleteButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D32F2F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="🔄 Làm mới" Width="120" Height="35" Margin="5,0,0,0" Background="#FF9800" Foreground="White" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand" Click="RefreshButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F57C00"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
