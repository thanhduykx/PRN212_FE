<Window x:Class="AssignmentPRN212.Views.UserListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh sách User" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="160"/>
        </Grid.RowDefinitions>

        <!-- DataGrid với style đẹp -->
        <DataGrid x:Name="UsersDataGrid" AutoGenerateColumns="False" SelectionMode="Single"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  Grid.Row="0" Margin="0,0,0,10" 
                  HeadersVisibility="Column"
                  RowBackground="#FFFFFF" AlternatingRowBackground="#F7F7F7"
                  GridLinesVisibility="None"
                  SelectionChanged="UsersDataGrid_SelectionChanged"
                  FontSize="14" FontWeight="Normal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Panel thông tin chi tiết -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="15" 
                Margin="0,0,0,0" >
            <StackPanel Orientation="Vertical" >
                <TextBlock Text="Thông tin chi tiết" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Email:" Width="80" VerticalAlignment="Center"/>
                    <TextBox x:Name="EmailTextBox" Width="220" Margin="0,0,20,0"/>
                    <Label Content="Full Name:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="FullNameTextBox" Width="220"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center">
                    <Label Content="Role:" Width="80" VerticalAlignment="Center"/>
                    <TextBox x:Name="RoleTextBox" Width="120" Margin="0,0,20,0"/>
                    <Label Content="Active:" Width="80" VerticalAlignment="Center"/>
                    <CheckBox x:Name="IsActiveCheckBox" VerticalAlignment="Center"/>
                    <Button Content="Refresh" Width="120" Height="35" Margin="20,0,0,0" Background="#2196F3" Foreground="White" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand" Click="RefreshButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
