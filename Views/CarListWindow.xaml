<Window x:Class="AssignmentPRN212.Views.CarListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh sách xe" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="CarDataGrid" AutoGenerateColumns="False" Grid.Row="0" 
                  SelectionChanged="CarDataGrid_SelectionChanged" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*"/>
                <DataGridTextColumn Header="Seats" Binding="{Binding Seats}" Width="50"/>
                <DataGridTextColumn Header="Size" Binding="{Binding SizeType}" Width="80"/>
                <DataGridTextColumn Header="Trunk" Binding="{Binding TrunkCapacity}" Width="80"/>
                <DataGridTextColumn Header="Battery" Binding="{Binding BatteryType}" Width="100"/>
                <DataGridTextColumn Header="Duration" Binding="{Binding BatteryDuration}" Width="80"/>
                <DataGridTextColumn Header="Rent/Day" Binding="{Binding RentPricePerDay}" Width="100"/>
                <DataGridTextColumn Header="Rent/Hour" Binding="{Binding RentPricePerHour}" Width="100"/>
                <DataGridTextColumn Header="Rent/Day w/Driver" Binding="{Binding RentPricePerDayWithDriver}" Width="120"/>
                <DataGridTextColumn Header="Rent/Hour w/Driver" Binding="{Binding RentPricePerHourWithDriver}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Name:" Width="80"/>
                    <TextBox x:Name="NameTextBox" Width="150"/>
                    <Label Content="Model:" Width="80" Margin="20,0,0,0"/>
                    <TextBox x:Name="ModelTextBox" Width="150"/>
                    <Label Content="Seats:" Width="80" Margin="20,0,0,0"/>
                    <TextBox x:Name="SeatsTextBox" Width="50"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Size:" Width="80"/>
                    <TextBox x:Name="SizeTextBox" Width="100"/>
                    <Label Content="Trunk:" Width="80" Margin="20,0,0,0"/>
                    <TextBox x:Name="TrunkTextBox" Width="50"/>
                    <Label Content="Battery Type:" Width="100" Margin="20,0,0,0"/>
                    <TextBox x:Name="BatteryTypeTextBox" Width="100"/>
                    <Label Content="Duration:" Width="70" Margin="20,0,0,0"/>
                    <TextBox x:Name="BatteryDurationTextBox" Width="50"/>
                    <Label Content="Status:" Width="60" Margin="20,0,0,0"/>
                    <TextBox x:Name="StatusTextBox" Width="50"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Rent/Day:" Width="80"/>
                    <TextBox x:Name="RentTextBox" Width="80"/>
                    <Label Content="Rent/Hour:" Width="80" Margin="20,0,0,0"/>
                    <TextBox x:Name="RentHourTextBox" Width="80"/>
                    <Label Content="Rent/Day w/Driver:" Width="120" Margin="20,0,0,0"/>
                    <TextBox x:Name="RentDayDriverTextBox" Width="100"/>
                    <Label Content="Rent/Hour w/Driver:" Width="130" Margin="20,0,0,0"/>
                    <TextBox x:Name="RentHourDriverTextBox" Width="80"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="ImageUrl:" Width="80"/>
                    <TextBox x:Name="ImageUrlTextBox" Width="200"/>
                    <Label Content="ImageUrl2:" Width="80" Margin="20,0,0,0"/>
                    <TextBox x:Name="ImageUrl2TextBox" Width="200"/>
                    <Label Content="ImageUrl3:" Width="80" Margin="20,0,0,0"/>
                    <TextBox x:Name="ImageUrl3TextBox" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Add" Width="80" Click="AddButton_Click"/>
                    <Button Content="Update" Width="80" Margin="10,0,0,0" Click="UpdateButton_Click"/>
                    <Button Content="Delete" Width="80" Margin="10,0,0,0" Click="DeleteButton_Click"/>
                </StackPanel>
                <StackPanel>
                    <Button Content="AI Phân tích" Width="120" Margin="10,0,0,0" Click="OpenAIWindow_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
