<Window x:Class="AssignmentPRN212.Views.CarListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh sách xe" Height="500" Width="900" WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2D">

    <Grid Margin="10">
        <DataGrid x:Name="CarDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                  RowBackground="#FF2D2D44" AlternatingRowBackground="#FF3A3A5C"
                  GridLinesVisibility="Horizontal" Foreground="White"
                  HeadersVisibility="Column" CanUserAddRows="False" FontSize="14"
                  RowHeight="60" SelectionMode="Single" SelectionUnit="FullRow">

            <!-- Header màu gradient -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF00D0FF" Offset="0"/>
                                <GradientStop Color="#FF0088AA" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- Hover row hiệu ứng sáng -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#FF2D2D44"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF00D0FF"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*"/>
                <DataGridTextColumn Header="Seats" Binding="{Binding Seats}" Width="50"/>
                <DataGridTextColumn Header="Size" Binding="{Binding SizeType}" Width="80"/>
                <DataGridTextColumn Header="Trunk (L)" Binding="{Binding TrunkCapacity}" Width="80"/>
                <DataGridTextColumn Header="Battery" Binding="{Binding BatteryType}" Width="100"/>
                <DataGridTextColumn Header="Duration (km)" Binding="{Binding BatteryDuration}" Width="90"/>
                <DataGridTextColumn Header="Rent/Day" Binding="{Binding RentPricePerDay}" Width="90"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="60"/>
            </DataGrid.Columns>
            
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Button Content="Thêm" Width="80" Background="Green" Foreground="White" Click="AddCar_Click"/>
            <Button Content="Sửa" Width="80" Background="Orange" Foreground="White" Click="EditCar_Click"/>
            <Button Content="Xóa" Width="80" Background="Red" Foreground="White" Click="DeleteCar_Click"/>
        </StackPanel>
    </Grid>
</Window>
