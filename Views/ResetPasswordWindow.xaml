<Window x:Class="AssignmentPRN212.Views.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đặt lại mật khẩu" Height="450" Width="450" WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2D" ResizeMode="NoResize" WindowStyle="None">

    <Border CornerRadius="15" Background="#FF2D2D44" Padding="20" Margin="10">
        <Grid>
            <StackPanel VerticalAlignment="Center">
                <!-- Tiêu đề -->
                <TextBlock Text="Đặt lại mật khẩu" FontSize="26" FontWeight="Bold" 
                           Foreground="#FF00D0FF" Margin="0,0,0,25" TextAlignment="Center"/>

                <!-- Email (read-only) -->
                <TextBlock Text="Email" Foreground="White" FontWeight="SemiBold"/>
                <TextBox x:Name="EmailTextBox" Height="30" Margin="0,5,0,15" 
                         Padding="5" Background="#FF2A2A3A" Foreground="#FFAAAAAA"
                         BorderThickness="0" IsReadOnly="True"/>

                <!-- OTP -->
                <TextBlock Text="Mã OTP" Foreground="White" FontWeight="SemiBold"/>
                <TextBox x:Name="OTPTextBox" Height="30" Margin="0,5,0,15" 
                         Padding="5" Background="#FF3A3A5C" Foreground="White"
                         BorderThickness="0" FontSize="16" TextAlignment="Center"
                         MaxLength="6"/>

                <!-- New Password -->
                <TextBlock Text="Mật khẩu mới" Foreground="White" FontWeight="SemiBold"/>
                <PasswordBox x:Name="NewPasswordBox" Height="30" Margin="0,5,0,15" 
                             Padding="5" Background="#FF3A3A5C" Foreground="White"
                             BorderThickness="0"/>

                <!-- Confirm New Password -->
                <TextBlock Text="Xác nhận mật khẩu mới" Foreground="White" FontWeight="SemiBold"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Height="30" Margin="0,5,0,20" 
                             Padding="5" Background="#FF3A3A5C" Foreground="White"
                             BorderThickness="0"/>

                <!-- Button -->
                <Button Content="Đặt lại mật khẩu" Height="40" Background="#FF00D0FF" Foreground="White" 
                        FontWeight="Bold" BorderThickness="0" 
                        Cursor="Hand" Click="Reset_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF00D0FF"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF00A0CC"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF0088AA"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Link quay lại đăng nhập -->
                <TextBlock Margin="0,15,0,0" TextAlignment="Center">
                    <Hyperlink x:Name="BackToLoginLink" Foreground="#FF00D0FF" Click="BackToLogin_Click">
                        <TextBlock Text="Quay lại đăng nhập" />
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Window>

