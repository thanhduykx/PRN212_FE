<Window x:Class="AssignmentPRN212.Views.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thanh toán" Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Order Info -->
        <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Thông tin đơn hàng" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Mã đơn:" FontWeight="SemiBold"/>
                        <TextBlock Text="Ngày đặt:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                        <TextBlock Text="Nhận xe:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                        <TextBlock Text="Trả xe:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="OrderIdTextBlock" Text=""/>
                        <TextBlock x:Name="OrderDateTextBlock" Text="" Margin="0,5,0,0"/>
                        <TextBlock x:Name="PickupTimeTextBlock" Text="" Margin="0,5,0,0"/>
                        <TextBlock x:Name="ReturnTimeTextBlock" Text="" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Payment Form -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20">
            <StackPanel>
                <TextBlock Text="Thông tin thanh toán" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                <!-- Price Breakdown -->
                <Border Background="#E3F2FD" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Chi tiết thanh toán" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="SubTotalTextBlock" Text="Tạm tính: 0 VNĐ" FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock x:Name="ExtraFeeTextBlock" Text="Phí phát sinh: 0 VNĐ" FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock x:Name="DamageFeeTextBlock" Text="Phí hư hỏng: 0 VNĐ" FontSize="14" Margin="0,0,0,5"/>
                                <TextBlock x:Name="DiscountTextBlock" Text="Giảm giá: 0 VNĐ" FontSize="14" Margin="0,0,0,5"/>
                            </StackPanel>
                            
                            <TextBlock x:Name="TotalAmountTextBlock" Grid.Column="1" Text="0 VNĐ" 
                                       FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Payment Method -->
                <Label Content="Phương thức thanh toán:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="PaymentMethodComboBox" Height="40" Margin="0,0,0,20">
                    <ComboBoxItem Content="Tiền mặt" IsSelected="True"/>
                    <ComboBoxItem Content="Chuyển khoản"/>
                    <ComboBoxItem Content="Thẻ tín dụng"/>
                </ComboBox>

                <!-- Billing Image (for bank transfer) -->
                <Label Content="Ảnh hóa đơn chuyển khoản (nếu có):" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBox x:Name="BillingImageUrlTextBox" Width="400" Height="40" Padding="10" 
                             VerticalContentAlignment="Center" FontSize="14"/>
                    <Button Content="Chọn ảnh" Width="100" Height="40" Margin="10,0,0,0"
                            Background="#2196F3" Foreground="White" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand" Click="SelectImageButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Hủy" Width="120" Height="40" Margin="0,0,10,0"
                    Background="#9E9E9E" Foreground="White" FontWeight="SemiBold"
                    BorderThickness="0" Cursor="Hand" Click="CancelButton_Click"/>
            <Button Content="Thanh toán" Width="150" Height="40"
                    Background="#4CAF50" Foreground="White" FontSize="16" FontWeight="Bold"
                    BorderThickness="0" Cursor="Hand" Click="PayButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

