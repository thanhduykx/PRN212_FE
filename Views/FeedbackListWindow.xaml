<Window x:Class="AssignmentPRN212.Views.FeedbackListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh sách Feedback" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="FeedbackDataGrid" AutoGenerateColumns="False" Grid.Row="0" 
                  SelectionChanged="FeedbackDataGrid_SelectionChanged" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Content" Binding="{Binding Content}" Width="*"/>
                <DataGridTextColumn Header="User" Binding="{Binding UserFullName}" Width="150"/>
                <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Title:" Width="80"/>
                    <TextBox x:Name="TitleTextBox" Width="150"/>
                    <Label Content="Content:" Width="80" Margin="20,0,0,0"/>
                    <TextBox x:Name="ContentTextBox" Width="300"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Add" Width="80" Click="AddButton_Click"/>
                    <Button Content="Update" Width="80" Margin="10,0,0,0" Click="UpdateButton_Click"/>
                    <Button Content="Delete" Width="80" Margin="10,0,0,0" Click="DeleteButton_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>